<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentsController">
   <children>
      <TableView fx:id="studentsTable" layoutX="56.0" layoutY="85.0" prefHeight="265.0" prefWidth="540.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="85.0" />
      <Label layoutX="30.0" layoutY="28.0" style="-fx-font-size: 26; -fx-font-weight: bold;" text="Alumnos agregados" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="40.0" />
      <Button layoutX="518.0" layoutY="370.0" mnemonicParsing="false" onAction="#handleNewStudent" text="Nuevo alumno" AnchorPane.bottomAnchor="15.0" AnchorPane.rightAnchor="30.0" />
      <MenuBar AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <menus>
          <Menu mnemonicParsing="false" text="Vistas">
               <items>
                  <CheckMenuItem mnemonicParsing="false" onAction="#handleTableView" selected="true" text="Tabla" />
                  <CheckMenuItem mnemonicParsing="false" onAction="#handleChartTable" text="Gráfica" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Opciones">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleDeleteStudent" text="Borrar último estudiante" />
                  <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Cerrar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="Información" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
